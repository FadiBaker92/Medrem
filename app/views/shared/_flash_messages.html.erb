<% if notice.present? %>
  <div class="alert alert-success position-relative" role="alert">
    <%= notice %>
    <button type="button" class="btn-close position-absolute" style="right:11px" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<% if alert.present? %>
  <div class="alert alert-danger position-relative" role="alert">
    <%= alert %>
    <button type="button" class="btn-close position-absolute" style="right:11px" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
