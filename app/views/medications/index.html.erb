<h1 class="quicksand">Medications</h1>
<%= link_to  "+ Add New Medication", new_medication_path , method: :get, class: "btn btn-dark custom_button_color quicksand" %>

<div id="medications">
  <div class="row">
    <% @medications.each do |medication| %>
      <div class="col-sm-6 mb-4 mb-sm-0 mt-4">
        <div class="card" style="width: 30rem;">
          <div class="card-body quicksand">
            <h5 class="card-title"> <strong> <%= medication.name%> </strong> </h5>
            <p class="card-text"><%= medication.description%> </p>
            <a href="/medications/<%= medication.id%>" class="btn btn-dark custom_button_color">Show This Medication</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
