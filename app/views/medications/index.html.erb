<div id="medications" class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Medications</h1>
    <%= link_to "+ Add New Medication", new_medication_path, class: "btn btn-primary btn-lg" %>
  </div>

  <div class="row">
    <% @medications.each do |medication| %>
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card shadow-sm h-100 border-0 hover-shadow">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><strong><%= medication.name %></strong></h5>
            <p class="card-text flex-grow-1 text-muted"><%= truncate(medication.description, length: 100) %></p>
            <%= link_to 'Show This Medication', medication_path(medication), class: "btn btn-primary mt-auto" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
