<%#= render "devise/shared/links" %>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 70vh;">
  <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%; border-radius: 10px;">
    <div class="card-body">
      <h2 class="card-title text-center mb-4">Log In</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <div class="mb-3">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: "form-control form-control-lg", placeholder: "Enter your email" },
                        label_html: { class: "form-label fw-bold" } %>
          </div>
          <div class="mb-3">
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password", class: "form-control form-control-lg", placeholder: "Enter your password" },
                        label_html: { class: "form-label fw-bold" } %>
          </div>
          <div class="form-check mb-3">
            <%= f.input :remember_me, as: :boolean, label: "Remember me", input_html: { class: "form-check-input" }, label_html: { class: "form-check-label" } if devise_mapping.rememberable? %>
          </div>
        </div>

        <div class="form-actions d-grid">
          <%= f.button :submit, "Log In", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>

      <div class="text-center mt-4">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
