<div class="container mt-5">
  <div class="card shadow-lg p-3" style="width: 25rem">
    <div class="card-header text-white custom_button_color">
      <h3 class="card-title mb-0"><%= reminder.new_record? ? "New Reminder" : "Edit Reminder" %></h3>
    </div>
    <div class="card-body">
      <%= form_with(model: reminder) do |form| %>
        <% if reminder.errors.any? %>
          <div class="alert alert-danger">
            <h4 class="alert-heading"><%= pluralize(reminder.errors.count, "error") %> prohibited this reminder from being saved:</h4>
            <ul>
              <% reminder.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= form.hidden_field :prescription_id, value: prescription.id %>

        <div class="mb-3">
          <%= form.label :sent_at, class: "form-label" %>
          <%= form.datetime_field :sent_at, class: "form-control", placeholder: "Select reminder date and time" %>
        </div>

        <div class="mb-3">
          <%= form.label :message, class: "form-label" %>
          <%= form.text_field :message, class: "form-control", placeholder: "Enter reminder message" %>
        </div>

        <div class="d-grid mt-3">
          <%= form.submit reminder.new_record? ? 'Create Reminder' : "Update Reminder", class: 'btn btn-primary custom_button_color w-100' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
