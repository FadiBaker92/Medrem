<div class="container mt-0">
  <h1 class="text-center">Reminders Calendar</h1>

  <%= month_calendar events: @reminders, attribute: :sent_at do |date, reminders| %>
    <div class="calendar-day">
      <%= date.day %>
      <% reminders.each do |reminder| %>
        <div class="event bg-success text-white p-2 rounded mb-2">
          <%= link_to reminder.message, reminder_path(reminder), class: 'text-white' %><br>
          <small><%= reminder.sent_at.strftime("%I:%M %p") %></small>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
