<%= form_with(model: @reminder) do |form| %>
  <div class="form-group">
    <%= form.label :message %>
    <%= form.text_area :message, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :sent_at %>
    <%= form.datetime_local_field :sent_at, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.hidden_field :prescription_id, value:@prescription.id, class: 'form-control' %>
  </div>

  <%= form.submit 'Create Reminder' , class: 'btn btn-primary' %>
  <%= link_to 'Back to Medication', medication_path(@medication.id), class: 'btn btn-secondary' %>
<% end %>
